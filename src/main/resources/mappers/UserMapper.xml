<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Dao.User">

    <resultMap id="userResult" type="com.luliu.rest.model.User">
        <id property="id" column="id"/>
        <result property="firstname" column="firstname"/>
        <result property="lastname" column="lastname"/>
        <result property="email" column="email"/>
        <result property="mobile" column="mobile"/>
    </resultMap>

    <select id="getAll" resultType="List" resultMap="userResult">
        SELECT * FROM user
    </select>

    <select id="get" parameterType="long" resultMap="userResult">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <insert id="create" parameterType="User" keyProperty="id">
        INSERT INTO user (id, firstname, lastname, email, mobile)
        VALUES (#{id}, #{firstname}, #{lastname}, #{email}, #{mobile})
    </insert>

</mapper>